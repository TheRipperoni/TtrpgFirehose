
{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": [
    "node_modules"
  ]
}
